<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp">
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NeuraTask"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/btnNotifications"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_notifications"
            android:layout_alignParentEnd="true"
            android:background="?android:selectableItemBackgroundBorderless"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/homeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView android:id="@+id/bottomNav" android:layout_width="match_parent" android:layout_height="wrap_content" android:menu="@menu/bottom_nav_menu"/>
</LinearLayout>
